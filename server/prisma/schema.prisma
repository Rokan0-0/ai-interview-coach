// In prisma/schema.prisma

// This tells Prisma we're using Postgres
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This tells Prisma how to generate its client
generator client {
  provider = "prisma-client-js"
}

// --- Our Data Models ---

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String?   // We will store a hash, not the plain password (optional for OAuth users)
  googleId  String?   @unique 
  provider  String    @default("email")
  createdAt DateTime  @default(now())
  answers   Answer[]  // A user can have many answers
}

model JobTrack {
  id        Int         @id @default(autoincrement())
  name      String      @unique // e.g., "Software Engineer"
  questions Question[]  // A track has many questions
}

model Question {
  id            Int       @id @default(autoincrement())
  text          String    // The question text
  jobTrack      JobTrack  @relation(fields: [jobTrackId], references: [id])
  jobTrackId    Int
  answers       Answer[]  // A question can be answered many times
}

model Answer {
  id          Int       @id @default(autoincrement())
  answerText  String
  feedback    String    // The AI-generated feedback
  createdAt   DateTime  @default(now())
  
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  
  question    Question  @relation(fields: [questionId], references: [id])
  questionId  Int
}